# ==================== DJANGO CORE SETTINGS ====================
# CRITICAL: Generate a new SECRET_KEY for production
# Run: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts (your domain and IP)
ALLOWED_HOSTS=your-vps-ip,your-domain.com,www.your-domain.com

# ==================== DATABASE CONFIGURATION ====================
DB_NAME=roams_db
DB_USER=roams_user
DB_PASSWORD=your-strong-database-password
DB_HOST=127.0.0.1
DB_PORT=5432

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://127.0.0.1:6379/0

# ==================== EMAIL NOTIFICATIONS ====================
# Email settings for threshold breach alerts
THRESHOLD_EMAIL_ENABLED=True
THRESHOLD_EMAIL_FROM=alerts@your-domain.com
THRESHOLD_CRITICAL_EMAILS=admin@your-domain.com,ops@your-domain.com
THRESHOLD_WARNING_EMAILS=ops@your-domain.com

# SMTP Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# ==================== SMS NOTIFICATIONS (OPTIONAL) ====================
THRESHOLD_SMS_ENABLED=False
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_FROM=+1234567890
THRESHOLD_CRITICAL_PHONES=+256700000001,+256700000002
THRESHOLD_WARNING_PHONES=+256700000003

# ==================== DEVELOPMENT OVERRIDES ====================
# For local development, create a .env file and override these:
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100
# SECRET_KEY=dev-secret-key-not-for-production
